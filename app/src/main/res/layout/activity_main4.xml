<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    tools:context=".MainActivity4">
        <TextView
            android:id="@+id/MainActivity4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="title"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_margin="4dp"
            />
    <WebView
        android:id="@+id/MainActivity4_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <FrameLayout android:padding="1dp"
        android:elevation="4dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">


        <Button
            android:id="@+id/MainActivity4_leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:layout_gravity="left"
            />

        <ProgressBar
            android:id="@+id/MainActivity4_progresBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextAppearance.AppCompat.Display3"

            />



        <Button
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:id="@+id/MainActivity4_RightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
             android:layout_gravity="right"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlCompat" />

    </FrameLayout>
</LinearLayout>